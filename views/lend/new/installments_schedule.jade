extends ../../layout

block menu
    +menu

block content
    form
        .form-group
            label(for="schedule") Payment expected every
            select#schedule.form-control
                option Day
                option Week
                option Month
        .form-group
            label(for="start") Start Date
            .input-group
                input#start.form-control.dates(type="date")
                span.input-group-addon
                    span.glyphicon.glyphicon-calendar
        .form-group
            label(for="end") End Date
            .input-group
                input#end.form-control.dates(type="date")
                span.input-group-addon
                    span.glyphicon.glyphicon-calendar
        .form-group
            label(for="num_installments") Number of Installments
            p.form-control-static 7
        .form-group
            label.control-label Amount Due With Each Installment
            p.form-control-static $150.00
        .form-group
            label.control-label First Installment Due
            p.form-control-static 05/11/12
        .form-group
            label.control-label Last Installment Due
            p.form-control-static 05/11/13
            

    +bottom_menu( 'No, Go Back', '/lend/new/installments', 'Yes, Continue', '/lend/new/reminders' )
    
block append script
    +nice_date( ".dates" )
        
    
        
