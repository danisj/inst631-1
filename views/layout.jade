            .navbar-header
                button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand( href="/" )
                    span bum-a-buck
            .collapse#navbar.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href="#") 
                            span.glyphicon.glyphicon-star
                            | Account
